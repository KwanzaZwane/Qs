@model IEnumerable<Qs.Models.Ticket>

@{
    ViewBag.Title = "Tickets - " + ViewBag.BranchName;
}

<h2>Tickets - @ViewBag.BranchName</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FunctionType.FunctionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTimeIssued)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTimeHelped)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTimeEnd)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FunctionType.FunctionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTimeIssued)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTimeHelped)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTimeEnd)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
    
    <tr>
  
        <td>
            <input type="button" class="btn btn-success" value="Print" id="print" onclick="Test(@Html.Raw(item.TicketNumber),'@(item.FunctionType.FunctionName)');" />
            
        </td>
    </tr>
}

</table>

    <script>
      
        var Test = function (number, category) {
            var w = window.open();         
            var content = "<html><head><title>Q's ticket system</title></head><body><h1 style='text-align:center; font-size:3em';>" + category + "</h1>"
                +"<h1 style='font-size:9em; text-align:center'>"+number+"</h1>"+"</body></html>"
            w.document.write(content);
            w.print();
            w.close();

            //window.location = "http://localhost:43850/Tickets/Create";
        };

    </script>
