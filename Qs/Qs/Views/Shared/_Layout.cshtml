<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/v/bs/dt-1.10.15/b-1.4.0/fc-3.2.2/fh-3.1.2/r-2.1.1/rg-1.0.0/sc-1.4.2/datatables.min.css" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Q's", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (this.User.IsInRole("Admin") || this.User.IsInRole("Branch"))
                    {
                        <li><a href="~/Tickets/Index"><i class="fa fa-fw fa-ticket"></i>Tickets</a></li>
                    }
                    @if (this.User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="~/FunctionTypes/Index"><i class="fa fa-fw fa-cogs"></i> Branch Functions</a>
                        </li>
                        @*<li>
                            <a href="~/Roles/Index"><i class="fa fa-fw fa-building-o"></i> Role Manager</a>
                        </li>*@
                        <li>
                            <a href="~/AspNetUsers/Index"><i class="fa fa-fw fa-building-o"></i>Branch Management</a>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Q's</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Html.Partial("_FlashPartial")


    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="//cdn.datatables.net/v/bs/dt-1.10.15/b-1.4.0/fc-3.2.2/fh-3.1.2/r-2.1.1/rg-1.0.0/sc-1.4.2/datatables.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
