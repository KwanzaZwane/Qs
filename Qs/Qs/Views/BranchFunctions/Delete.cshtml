@model Qs.Models.BranchFunctionsVM
@{
    ViewBag.Title = "Remove Function from Branch";
}

<h2>Remove Function from Branch</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Branch Function</h4>
    <hr />
    @Html.HiddenFor(model => model.BranchId)
    @Html.HiddenFor(model => model.FunctionId)
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.BranchName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BranchName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FunctionName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FunctionName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", new { id = Model.BranchId }, new { @class = "btn btn-info" })
        </div>
    }
</div>


