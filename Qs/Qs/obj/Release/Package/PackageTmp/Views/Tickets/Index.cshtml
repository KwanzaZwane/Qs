                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateTimeEnd)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Where(m => m.FunctionType.FunctionName == "Enquiries"))
