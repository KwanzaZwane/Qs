@model Qs.Models.BranchFunctionsVM

@{
    ViewBag.Title = "Add Branch Function";
}

<h2>@ViewBag.BranchName</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Member</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BranchId)

        <div class="form-group">
            @Html.LabelFor(model => model.FunctionId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FunctionId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FunctionId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


